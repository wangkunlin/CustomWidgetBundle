<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ForegroundImageView">
        <attr name="android:foreground" />
        <attr name="android:foregroundGravity" />
    </declare-styleable>

    <declare-styleable name="NumberSeekBar">
        <attr name="android:thumb" />
        <attr name="android:thumbOffset" />
        <attr name="android:max" />
        <attr name="android:progress" />
        <attr name="android:progressDrawable" />
        <!--文字大小-->
        <attr name="numberTextSize" format="dimension|reference" />
        <!--文字颜色-->
        <attr name="numberTextColor" format="color|reference" />
        <!--文字与 seekbar 的间距-->
        <attr name="numberTextPadding" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="MovieScoreSeekBar">
        <attr name="android:progressDrawable" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:textStyle" />

        <attr name="backgroundDrawable" format="reference" />

        <!-- 是否显示数字 -->
        <attr name="showText" format="boolean" />
        <!-- 遮罩层颜色 -->
        <attr name="maskColor" format="color|reference" />
        <!-- 分段数量 -->
        <attr name="segmentCount" format="integer|reference" />
        <!-- 圆角-->
        <attr name="cornerRadius" format="dimension|reference" />
        <!-- 每两个分段之间的间距 -->
        <attr name="segmentPadding" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="CountDownView">
        <attr name="android:max" />
        <attr name="android:progress" />
        <!--progress 两边的颜色-->
        <attr name="cdProgressSideColor" format="color|reference" />
        <!--progress 中间的颜色-->
        <attr name="cdProgressCenterColor" format="color|reference" />
        <!--中间文字的大小-->
        <attr name="cdTextSize" format="dimension|reference" />
        <!--中间文字的颜色-->
        <attr name="cdTextColor" format="color|reference" />
        <!--progress 宽度-->
        <attr name="cdProgressWidth" format="dimension|reference" />
        <!--progress 背景色-->
        <attr name="cdProgressBackgroundColor" format="color|reference" />
        <!--progress 与北京的内边距-->
        <attr name="cdProgressPadding" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="RoundTurnButton">
        <attr name="android:thumb" />
        <attr name="android:max" />
        <attr name="android:progress" />
        <attr name="startAngle" />
        <attr name="sweepAngle" />
        <attr name="progressWidth" />
        <attr name="progressColor" />
        <attr name="progressBackgroundColor" />
        <attr name="progressBackgroundWidth" />
    </declare-styleable>

    <declare-styleable name="VerticalSeekBar">
        <attr name="android:text" />
        <attr name="android:max" />
        <attr name="android:progress" />
        <attr name="android:progressDrawable" />
        <attr name="android:thumb" />
    </declare-styleable>

    <declare-styleable name="VerticalTextView">
        <!--每个文字之间的间距-->
        <attr name="verticalSpacing" format="dimension|reference" />
        <!--列间距-->
        <attr name="horizontalSpacing" format="dimension|reference" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:text" />
        <attr name="android:gravity" />
        <!-- 配置旋转的字符-->
        <attr name="rotationLetters" format="string|reference" />
        <!-- 配置字符旋转的角度-->
        <attr name="rotationDegrees" format="integer|reference" />
    </declare-styleable>

</resources>
