<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.wkl.widget.bundle.vsb.EqualizerSeekGroup
        android:id="@+id/esg"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.wkl.widget.bundle.vsb.VerticalSeekBar
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:max="100"
            android:paddingBottom="11dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="11dp"
            android:progress="30"
            android:progressDrawable="@drawable/equalizer_progress"
            android:text="60Hz"
            android:thumb="@drawable/icon_equalizer_thumb" />

        <com.wkl.widget.bundle.vsb.VerticalSeekBar
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="20dp"
            android:max="100"
            android:paddingBottom="11dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="11dp"
            android:progress="80"
            android:progressDrawable="@drawable/equalizer_progress"
            android:text="90Hz"
            android:thumb="@drawable/icon_equalizer_thumb" />

        <com.wkl.widget.bundle.vsb.VerticalSeekBar
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:max="100"
            android:paddingBottom="11dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="11dp"
            android:progress="50"
            android:progressDrawable="@drawable/equalizer_progress"
            android:text="120Hz"
            android:thumb="@drawable/icon_equalizer_thumb" />

    </com.wkl.widget.bundle.vsb.EqualizerSeekGroup>

    <com.wkl.widget.bundle.rtb.RoundTurnButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:progress="300"
        app:layout_constraintTop_toBottomOf="@id/esg" />

    <com.wkl.widget.bundle.vtv.VerticalTextView
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_marginLeft="10dp"
        android:text="《这是一个垂直的TextView》"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/esg"
        app:rotationDegrees="90"
        app:rotationLetters="《》" />

</android.support.constraint.ConstraintLayout>